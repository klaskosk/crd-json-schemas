{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "x-SPDX-FileCopyRightText": "Red Hat",
  "x-SPDX-License-Identifier": "Apache-2.0",
  "title": "PolicyGenTemplate",
  "type": "object",
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "$ref": "#/definitions/MetaData"
    },
    "spec": {
      "$ref": "#/definitions/PolicyGenTempSpec"
    }
  },
  "definitions": {
    "MetaData": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "PolicyGenTempSpec": {
      "type": "object",
      "properties": {
        "bindingRules": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "bindingExcludedRules": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "mcp": {
          "type": "string"
        },
        "wrapInPolicy": {
          "type": "boolean",
          "default": true
        },
        "remediationAction": {
          "type": "string",
          "default": "inform"
        },
        "complianceType": {
          "type": "string",
          "default": "musthave"
        },
        "evaluationInterval": {
          "$ref": "#/definitions/EvaluationInterval"
        },
        "sourceFiles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SourceFile"
          }
        }
      }
    },
    "EvaluationInterval": {
      "type": "object",
      "properties": {
        "compliant": {
          "type": "string",
          "default": "10m"
        },
        "noncompliant": {
          "type": "string",
          "default": "10s"
        }
      }
    },
    "SourceFile": {
      "type": "object",
      "required": [
        "fileName"
      ],
      "properties": {
        "fileName": {
          "type": "string"
        },
        "policyName": {
          "type": "string"
        },
        "complianceType": {
          "type": "string"
        },
        "remediationAction": {
          "type": "string"
        },
        "metadata": {
          "$ref": "#/definitions/MetaData"
        },
        "spec": {
          "type": "object"
        },
        "data": {
          "type": "object"
        },
        "status": {
          "type": "object"
        },
        "binaryData": {
          "type": "object"
        },
        "stringData": {
          "type": "object"
        },
        "evaluationInterval": {
          "$ref": "#/definitions/EvaluationInterval"
        }
      }
    }
  }
}
